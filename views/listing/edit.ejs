<%- layout("/layouts/boilerplate") %>

    <body>
        <h3>Edit your listing</h3>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
            <label for="title">
                Title:
                <input id="title" name="Listing[title]" type="text" value="<%= listing.title %>" required>
            </label>
            <br>
            <br>
            <label for="description">
                Description:
                <textarea id="description" name="Listing[description]" type="text"
                    placeholder="<%= listing.description %>" required> <%= listing.description %> </textarea>
            </label>
            <br>
            <br>
            <label for="image">
                Image:
                <input id="image" name="Listing[image]" type="text" value="<%= listing.image %>" required>
            </label>
            <br>
            <br>
            <label for="price">
                Price:
                <input id="price" name="Listing[price]" type="number" min="100" value="<%= listing.price %>" required>
            </label>
            <br>
            <br>
            <label for="location">
                Location:
                <input id="location" name="Listing[location]" value="<%= listing.location %>" type="text" required>
            </label>
            <br>
            <br>
            <label for="country">
                Country:
                <input id="country" name="Listing[country]" value="<%= listing.country %>" type="text" required>
            </label>
            <br>
            <br>
            <button type="submit">Edit</button>

        </form>
    </body>

    </html>